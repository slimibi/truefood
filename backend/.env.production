NODE_ENV=production
PORT=5000
# Replace with your production MongoDB URI
MONGODB_URI=mongodb+srv://username:password@cluster.net/foodie-finder
# Replace with a strong production JWT secret (64+ characters)
JWT_SECRET=your-super-secure-production-jwt-secret-64-characters-minimum
JWT_EXPIRES_IN=7d
# Replace with your production frontend domain
CORS_ORIGIN=https://your-frontend-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Cloudinary for image uploads
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret